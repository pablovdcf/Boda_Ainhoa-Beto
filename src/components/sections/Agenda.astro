---
import Card from "../ui/Card.astro";
import Badge from "../ui/Badge.astro";

interface AgendaItem {
  id: string;
  body: string;
  data: {
    time: string;
    title: string;
    location?: string;
  };
}

interface Props {
  title: string;
  items: AgendaItem[];
}

const { title, items } = Astro.props;
---

<section id="agenda" class="mt-14">
  <div class="mb-6 flex items-center justify-between gap-3">
    <h2 class="section-title">{title}</h2>
    <Badge tone="muted">Programa</Badge>
  </div>
  <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-3">
    {
      items.map((item, index) => (
        <Card className="h-full">
          <div slot="header" class="flex items-center justify-between gap-3">
            <p class="text-lg font-semibold text-brand-800">{item.data.time}</p>
            <span class="rounded-full bg-brand-50 px-2 py-1 text-xs font-semibold text-brand-800">
              {`Evento ${String(index + 1).padStart(2, "0")}`}
            </span>
          </div>
          <div slot="content">
            <h3 class="text-2xl font-semibold">{item.data.title}</h3>
            {item.data.location && (
              <p class="mt-1 text-sm font-medium text-slate-500">{item.data.location}</p>
            )}
            <p class="muted mt-3">{item.body.trim()}</p>
          </div>
        </Card>
      ))
    }
  </div>
</section>
