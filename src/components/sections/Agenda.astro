---
interface AgendaItem {
  id: string;
  body: string;
  data: {
    label?: string;
    time: string;
    title: string;
    icon?: string;
  };
}

interface Props {
  title: string;
  items: AgendaItem[];
}

const { title, items } = Astro.props;
---

<section id="detalles" class="section">
  <div class="landing-container landing-container-lg">
    <header class="text-center max-w-2xl mx-auto reveal">
      <p class="text-xs uppercase tracking-[0.24em] text-slate-500">Agenda</p>
      <h2 class="font-serif text-3xl md:text-4xl mt-3 text-night">{title}</h2>
    </header>

    <ol id="timeline" class="pro-agenda-grid mt-10">
      {
        items.map((item, index) => (
          <li class={`pro-agenda-item reveal ${index % 3 === 1 ? "reveal-delay-1" : index % 3 === 2 ? "reveal-delay-2" : ""}`.trim()}>
            <p class="pro-agenda-time">{item.data.time}</p>
            <h3 class="font-serif text-xl text-night mt-2">{item.data.title}</h3>
            <p class="mt-3 text-slate-600 leading-relaxed">{item.body.trim()}</p>
          </li>
        ))
      }
    </ol>
  </div>
</section>
