---
interface FAQItem {
  id: string;
  body: string;
  data: {
    question: string;
  };
}

interface Props {
  title: string;
  items: FAQItem[];
}

const { title, items } = Astro.props;
---

<section class="section bg-white reveal">
  <div class="max-w-4xl mx-auto px-6">
    <h2 class="font-serif text-3xl mb-6">{title}</h2>
    <div id="faqList">
      {
        items.map((item, idx) => (
          <details class={`card p-4 ${idx < items.length - 1 ? "mb-3" : ""}`}>
            <summary class="cursor-pointer font-medium">{item.data.question}</summary>
            <div class="mt-2 text-slate-700">{item.body.trim()}</div>
          </details>
        ))
      }
    </div>
  </div>
</section>

