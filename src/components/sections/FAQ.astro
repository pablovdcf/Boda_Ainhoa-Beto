---
interface FAQItem {
  id: string;
  body: string;
  data: {
    question: string;
  };
}

interface Props {
  title: string;
  items: FAQItem[];
}

const { title, items } = Astro.props;
---

<section class="section">
  <div class="landing-container landing-container-md">
    <header class="reveal">
      <p class="text-xs uppercase tracking-[0.24em] text-slate-500">FAQ</p>
      <h2 class="font-serif text-3xl mt-3 mb-6 text-night">{title}</h2>
    </header>
    <div id="faqList" class="reveal reveal-delay-1">
      {
        items.map((item, idx) => (
          <details class={`card p-5 faq-item ${idx < items.length - 1 ? "mb-3" : ""}`}>
            <summary class="cursor-pointer font-medium text-night">{item.data.question}</summary>
            <div class="mt-3 text-slate-700 leading-relaxed">{item.body.trim()}</div>
          </details>
        ))
      }
    </div>
  </div>
</section>
