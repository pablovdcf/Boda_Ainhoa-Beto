---
import Button from "../ui/Button.astro";

interface Props {
  title: string;
  text: string;
  ctaLabel: string;
  ctaHref: string;
}

const { title, text, ctaLabel, ctaHref } = Astro.props;
---

<footer class="section">
  <div class="landing-container landing-container-lg">
    <article class="pro-footer-shell reveal">
      <p class="text-xs uppercase tracking-[0.24em] text-white/70">RSVP</p>
      <h3 id="finalCtaTitle" class="font-serif text-3xl md:text-4xl font-bold text-white mt-3">{title}</h3>
      <p id="finalCtaText" class="mt-3 text-white/85">{text}</p>
      <Button id="finalCtaBtn" href={ctaHref} className="mt-7" variant="hero">{ctaLabel}</Button>
    </article>
  </div>
</footer>
