---
import Button from "../ui/Button.astro";

interface Props {
  note: string;
}

const { note } = Astro.props;
---

<footer class="mt-16 rounded-4xl bg-brand-900 px-6 py-10 text-white sm:px-10">
  <div class="grid gap-6 md:grid-cols-[1.4fr_0.6fr] md:items-center">
    <div>
      <p class="text-xs uppercase tracking-[0.26em] text-brand-200">Nos vemos pronto</p>
      <h2 class="mt-3 text-4xl font-semibold text-white">¿Nos acompañas en este día?</h2>
      <p class="mt-3 max-w-2xl text-brand-100">{note}</p>
    </div>
    <div class="flex flex-wrap gap-3 md:justify-end">
      <Button href="/invite" size="lg">Confirmar asistencia</Button>
      <Button href="/admin" variant="secondary" size="lg">Admin</Button>
    </div>
  </div>
</footer>

