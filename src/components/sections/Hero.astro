---
import Button from "../ui/Button.astro";

interface Props {
  eyebrow: string;
  title: string;
  subtitle: string;
  ctaLabel: string;
  ctaHref: string;
  heroImageSrc?: string;
  heroImageAlt?: string;
  secondaryCtaLabel?: string;
  secondaryCtaHref?: string;
}

const {
  eyebrow,
  title,
  subtitle,
  ctaLabel,
  ctaHref,
  heroImageSrc = "/assets/hero.jpg",
  heroImageAlt = "",
  secondaryCtaLabel = "Ver ubicaci√≥n",
  secondaryCtaHref = "#locationSection"
} = Astro.props;
---

<header class="hero-cinematic relative text-white">
  <img
    src={heroImageSrc}
    alt={heroImageAlt}
    class="hero-cinematic-media"
    loading="eager"
    decoding="async"
    fetchpriority="high"
    aria-hidden="true"
  />
  <div class="hero-cinematic-overlay" aria-hidden="true"></div>
  <div class="hero-cinematic-vignette" aria-hidden="true"></div>

  <div
    class="relative z-10 landing-container min-h-[70svh] md:min-h-[80svh] py-14 md:py-24 flex items-end"
  >
    <div class="w-full max-w-4xl reveal">
      <p class="hero-pro-eyebrow">{eyebrow}</p>
      <h1
        id="heroNames"
        class="font-serif font-bold mt-3 tracking-tight text-[clamp(3rem,11vw,6.5rem)] leading-[0.92]"
      >
        {title}
      </h1>
      <p
        id="heroSub"
        class="mt-4 text-sm md:text-base max-w-[40rem] leading-relaxed text-white/72 tracking-[0.06em] uppercase"
      >
        {subtitle}
      </p>
      <div class="mt-8 flex flex-col sm:flex-row gap-3 sm:items-center">
        <Button id="heroCta" href={ctaHref} variant="hero" className="w-full sm:w-auto">
          {ctaLabel}
        </Button>
        {
          secondaryCtaLabel && (
            <Button
              href={secondaryCtaHref}
              variant="hero-outline"
              className="w-full sm:w-auto"
            >
              {secondaryCtaLabel}
            </Button>
          )
        }
      </div>
    </div>
  </div>
</header>
