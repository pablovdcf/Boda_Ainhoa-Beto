---
import Button from "../ui/Button.astro";

interface Props {
  eyebrow: string;
  title: string;
  subtitle: string;
  ctaLabel: string;
  ctaHref: string;
}

const { eyebrow, title, subtitle, ctaLabel, ctaHref } = Astro.props;
---

<header class="relative bg-hero text-white hero-florals">
  <div class="absolute inset-0 bg-black/20 md:bg-black/15"></div>

  <div class="relative max-w-3xl mx-auto px-6 pt-16 pb-20 md:pt-24 md:pb-28 text-center">
    <p class="uppercase tracking-[.3em] text-white/80 text-sm">{eyebrow}</p>

    <h1
      id="heroNames"
      class="font-serif text-5xl md:text-6xl font-bold mt-3 drop-shadow-[0_2px_8px_rgba(0,0,0,.25)]"
    >
      {title}
    </h1>

    <p id="heroSub" class="mt-4 text-white/85 text-lg">{subtitle}</p>

    <div class="mt-8 flex flex-wrap gap-3 justify-center">
      <Button href={ctaHref} variant="hero">{ctaLabel}</Button>
    </div>
  </div>

  <div class="divider opacity-40"></div>
</header>

