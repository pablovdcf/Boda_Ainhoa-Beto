---
import Button from "../ui/Button.astro";

interface Props {
  eyebrow: string;
  title: string;
  subtitle: string;
  ctaLabel: string;
  ctaHref: string;
  heroImageSrc?: string;
  heroImageAlt?: string;
  secondaryCtaLabel?: string;
  secondaryCtaHref?: string;
}

const {
  eyebrow,
  title,
  subtitle,
  ctaLabel,
  ctaHref,
  heroImageSrc = "/assets/hero.jpg",
  heroImageAlt = "",
  secondaryCtaLabel = "Ver ubicación",
  secondaryCtaHref = "#locationSection"
} = Astro.props;
---

<header class="hero-cinematic relative text-white">
  <img
    src={heroImageSrc}
    alt={heroImageAlt}
    class="hero-cinematic-media"
    loading="eager"
    decoding="async"
    fetchpriority="high"
    aria-hidden="true"
  />
  <div class="hero-cinematic-overlay" aria-hidden="true"></div>
  <div class="hero-cinematic-vignette" aria-hidden="true"></div>

  <div
    class="relative z-10 landing-container min-h-[70svh] md:min-h-[80svh] py-14 md:py-20 flex items-end"
  >
    <div class="hero-pro-shell w-full">
      <div class="hero-pro-copy reveal">
        <p class="hero-pro-eyebrow">{eyebrow}</p>
        <h1 id="heroNames" class="font-serif text-5xl md:text-7xl font-bold mt-3 tracking-tight">
          {title}
        </h1>
        <p id="heroSub" class="mt-4 text-base md:text-xl max-w-[32rem] leading-relaxed text-white/88">
          {subtitle}
        </p>
        <div class="mt-8 flex flex-wrap gap-3">
          <Button id="heroCta" href={ctaHref} variant="hero">{ctaLabel}</Button>
          {
            secondaryCtaLabel && (
              <Button href={secondaryCtaHref} variant="hero-outline">{secondaryCtaLabel}</Button>
            )
          }
        </div>
      </div>

      <div class="hero-pro-panel reveal reveal-delay-1">
        <p class="text-xs uppercase tracking-[0.24em] text-night/55">Cuándo y dónde</p>
        <ul class="mt-3 space-y-2 text-night/90">
          {
            subtitle
              .split("·")
              .map((part) => part.trim())
              .filter(Boolean)
              .map((part) => <li>{part}</li>)
          }
        </ul>
      </div>
    </div>
  </div>
</header>
