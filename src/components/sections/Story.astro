---
interface StoryData {
  title: string;
  lead: string;
  closing: string;
  image: {
    src: string;
    alt: string;
    width: number;
    height: number;
  };
}

interface Props {
  story: StoryData;
  coupleNames?: string;
  metaLine?: string;
}

const {
  story,
  coupleNames = "Ainhoa & Alberto",
  metaLine = "San Sebastián · Verified"
} = Astro.props;
---

<section id="historia" class="section">
  <div class="landing-container">
    <article class="pro-story-vertical mx-auto max-w-2xl px-6">
      <p class="text-xs uppercase tracking-[0.24em] text-slate-500 reveal">Nuestra historia</p>
      <h2 class="font-serif text-4xl md:text-5xl mt-3 text-night reveal reveal-delay-1">
        {story.title}
      </h2>
      <p class="text-slate-700 mt-5 leading-relaxed reveal reveal-delay-1">{story.lead}</p>

      <figure class="story-tinder-card mt-8 reveal reveal-delay-2">
        <div class="story-tinder-media">
          <img
            src={story.image.src}
            alt={story.image.alt}
            width={story.image.width}
            height={story.image.height}
            class="story-tinder-image"
            loading="lazy"
            decoding="async"
          />
        </div>
        <figcaption class="story-tinder-overlay">
          <p class="story-tinder-name">{coupleNames}</p>
          <p class="story-tinder-meta">{metaLine}</p>
        </figcaption>
      </figure>

      <p class="story-epilogue mt-6 reveal reveal-delay-2">{story.closing}</p>
    </article>
  </div>
</section>
