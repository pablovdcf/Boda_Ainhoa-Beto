---
interface StoryData {
  title: string;
  lead: string;
  closing: string;
  image: {
    src: string;
    alt: string;
    width: number;
    height: number;
  };
}

interface Props {
  story: StoryData;
}

const { story } = Astro.props;
---

<section id="historia" class="section">
  <div class="landing-container landing-container-lg">
    <article class="pro-story card p-4 md:p-6">
      <div class="pro-story-media reveal">
        <img
          src={story.image.src}
          alt={story.image.alt}
          width={story.image.width}
          height={story.image.height}
          class="rounded-2xl w-full h-full object-cover"
          loading="lazy"
          decoding="async"
        />
      </div>

      <div class="pro-story-copy reveal reveal-delay-1">
        <p class="text-xs uppercase tracking-[0.24em] text-slate-500">Nuestra historia</p>
        <h2 class="font-serif text-3xl md:text-4xl mt-3 text-night">{story.title}</h2>
        <p class="text-slate-700 mt-5 leading-relaxed">{story.lead}</p>
        <p class="text-slate-600 mt-4 leading-relaxed">{story.closing}</p>
      </div>
    </article>
  </div>
</section>
