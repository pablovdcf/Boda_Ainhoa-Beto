---
interface Props {
  href?: string;
  type?: "button" | "submit" | "reset";
  variant?:
    | "primary"
    | "outline"
    | "hero"
    | "hero-outline"
    | "secondary"
    | "ghost";
  size?: "sm" | "md" | "lg";
  className?: string;
  disabled?: boolean;
  target?: string;
  rel?: string;
  ariaLabel?: string;
  [key: string]: unknown;
}

const {
  href,
  type = "button",
  variant = "primary",
  size = "md",
  className = "",
  disabled = false,
  target,
  rel,
  ariaLabel,
  ...rest
} = Astro.props;

const sizeClasses: Record<string, string> = {
  sm: "text-sm",
  md: "text-base",
  lg: "text-lg"
};
const normalizedVariant =
  variant === "secondary"
    ? "outline"
    : variant === "ghost"
      ? "hero-outline"
      : variant;
const variants: Record<string, string> = {
  primary: "btn",
  outline: "btn btn-outline",
  hero: "btn-hero",
  "hero-outline": "btn-hero-outline"
};
const disabledClass = disabled ? "opacity-60 pointer-events-none" : "";
const classes =
  `${variants[normalizedVariant] ?? variants.primary} ${sizeClasses[size] ?? sizeClasses.md} ${disabledClass} ${className}`.trim();
const anchorRel = target === "_blank" ? rel || "noreferrer noopener" : rel;
---

{
  href ? (
    <a
      href={disabled ? undefined : href}
      class={classes}
      target={target}
      rel={anchorRel}
      aria-disabled={disabled ? "true" : undefined}
      aria-label={ariaLabel}
      {...rest}
    >
      <slot />
    </a>
  ) : (
    <button
      type={type}
      class={classes}
      disabled={disabled}
      aria-label={ariaLabel}
      {...rest}
    >
      <slot />
    </button>
  )
}
